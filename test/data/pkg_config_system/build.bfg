# -*- python -*-

project('hello', '1.0')

ogg = package('ogg')

include = header_directory('include', include='**/*.hpp')
inner = library('inner', files=['src/inner.cpp'], packages=[ogg])
lib = library('hello', files=['src/hello.cpp'], includes=[include],
              libs=[inner])

install(lib, include)

pkg_config(
    'hello',
    version='1.0',
    includes=[include],
    libs=[lib],
    auto_fill=False
)
